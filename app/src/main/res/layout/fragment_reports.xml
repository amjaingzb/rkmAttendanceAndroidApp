<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.ReportsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overall Statistics"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:layout_marginBottom="16dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4">

        <!-- Row 1 -->
        <TextView
            android:layout_columnWeight="1"
            android:text="Total Devotee Records:"
            android:textAppearance="?attr/textAppearanceBody1"/>
        <TextView
            android:id="@+id/text_total_devotees"
            android:gravity="end"
            android:text="-"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textStyle="bold"/>

        <!-- Row 2 -->
        <TextView
            android:layout_columnWeight="1"
            android:layout_marginTop="12dp"
            android:text="Mapped WhatsApp Numbers:"
            android:textAppearance="?attr/textAppearanceBody1"/>
        <TextView
            android:id="@+id/text_total_whatsapp"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:text="-"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textStyle="bold"/>

        <!-- Row 3 -->
        <TextView
            android:layout_columnWeight="1"
            android:layout_marginTop="12dp"
            android:text="Devotees in WhatsApp Group:"
            android:textAppearance="?attr/textAppearanceBody1"/>
        <TextView
            android:id="@+id/text_devotees_in_whatsapp"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:text="-"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textStyle="bold"/>

        <!-- Row 4 -->
        <TextView
            android:layout_columnWeight="1"
            android:layout_marginTop="12dp"
            android:text="Devotees with Attendance:"
            android:textAppearance="?attr/textAppearanceBody1"/>
        <TextView
            android:id="@+id/text_devotees_with_attendance"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:text="-"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textStyle="bold"/>
    </GridLayout>

</LinearLayout>
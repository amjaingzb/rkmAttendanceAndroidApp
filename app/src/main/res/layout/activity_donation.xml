<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.donations.DonationActivity">

    <!-- This screen will be fully built in Phase 2. -->
    <!-- For Phase 1, it only needs to exist to be launched after login. -->
    <!-- We can add a placeholder search bar to connect the workflow. -->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_search"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:hintEnabled="false"
        app:startIconDrawable="@drawable/ic_search">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_search_devotee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search Devotee to Record Donation..."
            android:inputType="text"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List of today's donations will appear here in Phase 2."
        android:gravity="center"
        android:layout_margin="16dp"
        android:textAppearance="?attr/textAppearanceBody1"/>

</LinearLayout>

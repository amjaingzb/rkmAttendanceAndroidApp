<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MappingActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/mapping_instructions"
        android:textAppearance="?attr/textAppearanceBody2"
        android:background="#F0F0F0"/> <!-- MODIFIED: Replaced theme attribute with a simple hex color -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_mapping"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:listitem="@layout/list_item_mapping" />

    <ProgressBar
        android:id="@+id/progress_bar_import"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        tools:visibility="visible"/>

</LinearLayout>

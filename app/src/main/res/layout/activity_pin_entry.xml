<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="32dp"
    tools:context=".ui.PinEntryActivity">

    <TextView
        android:id="@+id/text_pin_entry_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:textAppearance="?attr/textAppearanceHeadline6"
        tools:text="Enter Super Admin PIN" />

    <!-- MODIFIED: Replaced the 3rd party library with a standard LinearLayout of EditTexts -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/pin_digit_1"
            style="@style/PinEditText" />

        <EditText
            android:id="@+id/pin_digit_2"
            style="@style/PinEditText" />

        <EditText
            android:id="@+id/pin_digit_3"
            style="@style/PinEditText" />

        <EditText
            android:id="@+id/pin_digit_4"
            style="@style/PinEditText" />
    </LinearLayout>

    <Button
        android:id="@+id/button_submit_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:enabled="false"
        android:text="Submit" />

</LinearLayout>